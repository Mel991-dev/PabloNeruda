# Configuración de entorno - Escuela Pablo Neruda
# Copiar este archivo como .env y configurar los valores

# Base de datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=escuela_pablo_neruda
DB_USER=root
DB_PASS=

# Aplicación
APP_NAME="Sistema Escuela Pablo Neruda"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/pablo_neruda/public

# Sesión
SESSION_LIFETIME=1800
SESSION_NAME=escuela_session

# Seguridad
PASSWORD_ALGO=PASSWORD_BCRYPT
HASH_COST=12

# Uploads
UPLOAD_MAX_SIZE=2097152
UPLOAD_ALLOWED_TYPES=pdf
UPLOAD_PATH=uploads/documentos
